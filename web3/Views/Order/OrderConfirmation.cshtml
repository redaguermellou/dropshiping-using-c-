@model ecom.Models.Order
@{
    ViewData["Title"] = "Confirmation de commande";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <div class="mb-4">
            <i class="bi bi-check-circle text-success display-1"></i>
        </div>
        <h1 class="display-5 fw-bold text-success">Commande confirmée!</h1>
        <p class="lead">Merci pour votre commande. Voici les détails:</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5>Informations de commande</h5>
                            <p class="mb-1"><strong>Numéro de commande:</strong> @Model.OrderNumber</p>
                            <p class="mb-1"><strong>Date:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</p>
                            <p class="mb-1"><strong>Statut:</strong> <span class="badge bg-info">@Model.Status</span></p>
                            <p class="mb-0"><strong>Paiement:</strong> <span class="badge bg-success">@Model.PaymentStatus</span></p>
                        </div>
                        <div class="col-md-6">
                            <h5>Adresse de livraison</h5>
                            <p class="mb-0">@Html.Raw(Model.ShippingAddress.Replace("\n", "<br/>"))</p>
                        </div>
                    </div>

                    <hr />

                    <h5 class="mb-3">Détails des articles</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Produit</th>
                                    <th>Prix unitaire</th>
                                    <th>Quantité</th>
                                    <th>Sous-total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@detail.Product.Name</td>
                                        <td>@detail.UnitPrice.ToString("C2")</td>
                                        <td>@detail.Quantity</td>
                                        <td>@detail.Subtotal.ToString("C2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <div class="text-end">
                        <div class="row justify-content-end">
                            <div class="col-md-6">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Sous-total:</span>
                                    <span>@Model.TotalAmount.ToString("C2")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Livraison:</span>
                                    <span class="text-success">Gratuite</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>TVA:</span>
                                    <span>@((Model.TotalAmount * 0.2m).ToString("C2"))</span>
                                </div>
                                <hr />
                                <div class="d-flex justify-content-between mb-3">
                                    <strong>Total:</strong>
                                    <strong class="text-primary fs-5">@((Model.TotalAmount * 1.2m).ToString("C2"))</strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <p class="text-muted mb-3">
                            Un email de confirmation vous a été envoyé à votre adresse email.
                        </p>
                        <div class="d-flex justify-content-center gap-3">
                            <a asp-controller="Order" asp-action="History" class="btn btn-outline-primary">
                                <i class="bi bi-list-ul me-2"></i>Voir mes commandes
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-shop me-2"></i>Continuer mes achats
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>