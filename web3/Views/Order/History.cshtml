@model List<ecom.Models.Order>
@{
    ViewData["Title"] = "Mes commandes";
}

<div class="container py-5">
    <h1 class="mb-4">Mes commandes</h1>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>N° Commande</th>
                        <th>Date</th>
                        <th>Montant</th>
                        <th>Statut</th>
                        <th>Paiement</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>
                                <strong>@order.OrderNumber</strong>
                            </td>
                            <td>@order.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>@order.TotalAmount.ToString("C2")</td>
                            <td>
                                @{
                                    var statusClass = order.Status switch
                                    {
                                        "Pending" => "bg-warning",
                                        "Confirmed" => "bg-info",
                                        "Processing" => "bg-primary",
                                        "Shipped" => "bg-success",
                                        "Delivered" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @statusClass">@order.Status</span>
                            </td>
                            <td>
                                @{
                                    var paymentClass = order.PaymentStatus switch
                                    {
                                        "Paid" => "bg-success",
                                        "Pending" => "bg-warning",
                                        "Failed" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @paymentClass">@order.PaymentStatus</span>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id"
                                       class="btn btn-outline-primary">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    @if (order.Status == "Pending" || order.Status == "Confirmed")
                                    {
                                        <form asp-controller="Order" asp-action="Cancel" asp-route-id="@order.Id"
                                              method="post" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger"
                                                    onclick="return confirm('Annuler cette commande ?')">
                                                <i class="bi bi-x-circle"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-cart display-1 text-muted"></i>
            <h3 class="mt-3">Aucune commande</h3>
            <p class="text-muted mb-4">Vous n'avez pas encore passé de commande.</p>
            <a asp-controller="Home" asp-action="Products" class="btn btn-primary">
                <i class="bi bi-shop me-2"></i>Découvrir nos produits
            </a>
        </div>
    }
</div>