@model ecom.Models.User
@{
    ViewData["Title"] = "My Profile";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <!-- User Avatar -->
                    <div class="avatar-lg bg-primary rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                         style="width: 120px; height: 120px;">
                        <span class="text-white display-6">@Model.Initials</span>
                    </div>

                    <h5 class="card-title">@Model.FullName</h5>
                    <p class="text-muted mb-0">@Model.Email</p>
                    <span class="badge bg-@(Model.IsAdmin ? "danger" : "primary") mt-2">
                        @Model.Role
                    </span>

                    <hr class="my-3">

                    <!-- Navigation -->
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="#profile-info">
                                <i class="bi bi-person me-2"></i>Profile Info
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#orders">
                                <i class="bi bi-receipt me-2"></i>My Orders
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#security">
                                <i class="bi bi-shield-lock me-2"></i>Security
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#addresses">
                                <i class="bi bi-geo-alt me-2"></i>Addresses
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Account Stats -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title">Account Stats</h6>
                    <ul class="list-unstyled mb-0">
                        <li class="d-flex justify-content-between py-2">
                            <span>Member since:</span>
                            <strong>@Model.CreatedAt.ToString("MMM yyyy")</strong>
                        </li>
                        <li class="d-flex justify-content-between py-2">
                            <span>Last login:</span>
                            <strong>@(Model.LastLogin?.ToString("g") ?? "Never")</strong>
                        </li>
                        <li class="d-flex justify-content-between py-2">
                            <span>Status:</span>
                            <span class="badge bg-@(Model.IsActive ? "success" : "danger")">
                                @(Model.IsActive ? "Active" : "Inactive")
                            </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            <!-- Profile Info -->
            <div class="card mb-4" id="profile-info">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Profile Information</h5>
                    <button class="btn btn-sm btn-outline-primary" id="editProfileBtn">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </button>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post" id="profileForm">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input asp-for="FirstName" class="form-control" readonly />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input asp-for="LastName" class="form-control" readonly />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" class="form-control" readonly />
                                <span asp-validation-for="Email" class="text-danger"></span>
                                @if (!Model.EmailVerified)
                                {
                                    <small class="text-warning">
                                        <i class="bi bi-exclamation-triangle"></i> Email not verified
                                    </small>
                                }
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" class="form-control" readonly />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-12 mb-3">
                                <label asp-for="Username" class="form-label"></label>
                                <input asp-for="Username" class="form-control" readonly />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="col-12 text-end" id="profileFormActions" style="display: none;">
                                <button type="button" class="btn btn-secondary" id="cancelEditBtn">Cancel</button>
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Address Information -->
            <div class="card mb-4" id="addresses">
                <div class="card-header">
                    <h5 class="mb-0">Shipping Address</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <address>
                            <strong>@Model.FullName</strong><br>
                            @Model.Address<br>
                            @Model.City, @Model.PostalCode<br>
                            @Model.Country<br>
                            <i class="bi bi-telephone me-1"></i> @Model.Phone
                        </address>

                        <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#editAddressModal">
                            <i class="bi bi-pencil me-1"></i>Edit Address
                        </button>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-geo-alt display-4 text-muted"></i>
                            <p class="mt-3">No shipping address saved</p>
                            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editAddressModal">
                                <i class="bi bi-plus-circle me-1"></i>Add Address
                            </button>
                        </div>
                    }
                </div>
            </div>

            <!-- Recent Orders -->
            <div class="card" id="orders">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Orders</h5>
                    <a asp-controller="Order" asp-action="History" class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                </div>
                <div class="card-body">
                    @if (Model.Orders?.Any() == true)
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders.OrderByDescending(o => o.CreatedAt).Take(5))
                                    {
                                        <tr>
                                            <td>#@order.Id.ToString("D6")</td>
                                            <td>@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge bg-@order.Status switch{
                                                            " Delivered"=>
                                                    "success",
                                                    "Shipped" => "info",
                                                    "Processing" => "warning",
                                                    "Cancelled" => "danger",
                                                    _ => "secondary"
                                                    }">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>@order.TotalAmount.ToString("C")</td>
                                            <td>
                                                <a href="@Url.Action("Details", "Order", new { id = order.Id })"
                                                   class="btn btn-sm btn-outline-primary">
                                                    View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-cart display-4 text-muted"></i>
                            <p class="mt-3">No orders yet</p>
                            <a asp-controller="Home" asp-action="Products" class="btn btn-primary">
                                <i class="bi bi-bag me-1"></i>Start Shopping
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Address Modal -->
<div class="modal fade" id="editAddressModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Shipping Address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form asp-action="UpdateAddress" method="post" id="addressForm">
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <textarea name="Address" class="form-control" rows="3">@Model.Address</textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">City</label>
                            <input name="City" class="form-control" value="@Model.City" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Postal Code</label>
                            <input name="PostalCode" class="form-control" value="@Model.PostalCode" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Country</label>
                        <select name="Country" class="form-select">
                            <option value="France" selected>France</option>
                            <option value="Belgium">Belgium</option>
                            <option value="Switzerland">Switzerland</option>
                            <option value="Luxembourg">Luxembourg</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="submit" form="addressForm" class="btn btn-primary">Save Address</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Profile edit functionality
            const editProfileBtn = document.getElementById('editProfileBtn');
            const cancelEditBtn = document.getElementById('cancelEditBtn');
            const profileFormActions = document.getElementById('profileFormActions');
            const formInputs = document.querySelectorAll('#profileForm input[readonly]');

            if (editProfileBtn) {
                editProfileBtn.addEventListener('click', function() {
                    // Enable inputs
                    formInputs.forEach(input => {
                        input.removeAttribute('readonly');
                        input.classList.add('form-control-editable');
                    });

                    // Show action buttons
                    profileFormActions.style.display = 'block';
                    editProfileBtn.style.display = 'none';
                });
            }

            if (cancelEditBtn) {
                cancelEditBtn.addEventListener('click', function() {
                    // Disable inputs
                    formInputs.forEach(input => {
                        input.setAttribute('readonly', true);
                        input.classList.remove('form-control-editable');
                    });

                    // Hide action buttons
                    profileFormActions.style.display = 'none';
                    editProfileBtn.style.display = 'block';

                    // Reset form (optional - reload page for full reset)
                    document.getElementById('profileForm').reset();
                });
            }

            // Form submission feedback
            const profileForm = document.getElementById('profileForm');
            if (profileForm) {
                profileForm.addEventListener('submit', function(e) {
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Saving...';
                        submitBtn.disabled = true;
                    }
                });
            }

            // Address form submission
            const addressForm = document.getElementById('addressForm');
            if (addressForm) {
                addressForm.addEventListener('submit', function(e) {
                    const submitBtn = this.closest('.modal').querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Saving...';
                        submitBtn.disabled = true;
                    }
                });
            }
        });
    </script>

    <style>
        .form-control-editable {
            background-color: #fff !important;
            border-color: #6366f1 !important;
        }

        .avatar-lg {
            width: 120px;
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            font-weight: bold;
        }

        .nav-link.active {
            color: #6366f1 !important;
            background-color: rgba(99, 102, 241, 0.1);
            border-radius: 8px;
        }

        .nav-link {
            color: #6b7280;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            margin-bottom: 0.25rem;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: #6366f1;
                background-color: rgba(99, 102, 241, 0.05);
            }
    </style>
}