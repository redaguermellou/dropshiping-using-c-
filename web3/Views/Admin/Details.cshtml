@model ecom.Models.Product
@{
    ViewData["Title"] = "Détails du produit";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">@Model.Name</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil me-1"></i>Modifier
            </a>
            <a asp-action="Products" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Retour
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="img-fluid rounded mb-3" alt="@Model.Name">
                    }
                    <div class="d-grid gap-2">
                        <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="get" class="d-inline">
                            @if (Model.IsActive)
                            {
                                <button type="submit" class="btn btn-warning w-100">
                                    <i class="bi bi-pause-circle me-1"></i>Désactiver
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-play-circle me-1"></i>Activer
                                </button>
                            }
                        </form>
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post"
                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="bi bi-trash me-1"></i>Supprimer
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title">Informations du produit</h5>
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 30%">ID</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>SKU</th>
                            <td><code>@Model.SKU</code></td>
                        </tr>
                        <tr>
                            <th>Catégorie</th>
                            <td>@(Model.Category?.Name ?? "Non catégorisé")</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>@Model.Price.ToString("C2")</td>
                        </tr>
                        <tr>
                            <th>Stock</th>
                            <td>
                                @if (Model.StockQuantity > 10)
                                {
                                    <span class="badge bg-success">@Model.StockQuantity unités</span>
                                }
                                else if (Model.StockQuantity > 0)
                                {
                                    <span class="badge bg-warning">@Model.StockQuantity unités</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Rupture de stock</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Statut</th>
                            <td>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Actif</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactif</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Créé le</th>
                            <td>@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Dernière mise à jour</th>
                            <td>@(Model.UpdatedAt?.ToString("dd/MM/yyyy HH:mm") ?? "-")</td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Description</h5>
                    <p>@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>