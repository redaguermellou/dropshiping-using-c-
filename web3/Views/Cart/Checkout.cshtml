@model ecom.ViewModels.CheckoutViewModel
@{
    ViewData["Title"] = "Validation de commande";
}

<div class="container py-5">
    <h1 class="mb-4">Validation de commande</h1>

    <div class="row">
        <!-- Order Form -->
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Informations de livraison</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Cart" asp-action="Checkout" method="post" id="checkoutForm">
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Email *</label>
                                <input asp-for="Email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Téléphone</label>
                                <input asp-for="Phone" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Adresse de livraison *</label>
                                <textarea asp-for="ShippingAddress" class="form-control" rows="3" required></textarea>
                                <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Ville *</label>
                                <input asp-for="City" class="form-control" required />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Code postal *</label>
                                <input asp-for="PostalCode" class="form-control" required />
                                <span asp-validation-for="PostalCode" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Pays *</label>
                                <select asp-for="Country" class="form-select" required>
                                    <option value="">Choisissez...</option>
                                    <option value="France">France</option>
                                    <option value="Belgique">Belgique</option>
                                    <option value="Suisse">Suisse</option>
                                    <option value="Luxembourg">Luxembourg</option>
                                </select>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Méthode de paiement *</label>
                                <select asp-for="PaymentMethod" class="form-select" required>
                                    <option value="">Choisissez...</option>
                                    <option value="CreditCard">Carte bancaire</option>
                                    <option value="PayPal">PayPal</option>
                                </select>
                                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Notes de commande</label>
                                <textarea asp-for="Notes" class="form-control" rows="3"
                                          placeholder="Instructions spéciales..."></textarea>
                            </div>
                        </div>
                        
                        <!-- Hidden fields for totals -->
                        <input type="hidden" asp-for="TotalAmount" />
                        <input type="hidden" asp-for="TotalAmountWithVat" />
                    </form>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Récapitulatif de commande</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h6>Articles (@Model.Cart?.ItemCount)</h6>
                        <div class="border rounded p-3" style="max-height: 200px; overflow-y: auto;">
                            @if (Model.Cart?.Items?.Any() == true)
                            {
                                @foreach (var item in Model.Cart.Items)
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <div>
                                            <small>@item.Product?.Name x @item.Quantity</small>
                                            @if (item.Product != null && item.Quantity > item.Product.StockQuantity)
                                            {
                                                <br />
                                                <small class="text-danger">
                                                    <i class="bi bi-exclamation-triangle"></i> Stock insuffisant
                                                </small>
                                            }
                                        </div>
                                        <small>@item.Subtotal.ToString("C2")</small>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-muted text-center mb-0">Aucun article</p>
                            }
                        </div>
                    </div>

                    <div class="d-flex justify-content-between mb-2">
                        <span>Sous-total:</span>
                        <span>@Model.TotalAmount.ToString("C2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Livraison:</span>
                        <span class="text-success">Gratuite</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span>TVA:</span>
                        <span>@((Model.TotalAmount * 0.2m).ToString("C2"))</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total:</strong>
                        <strong class="text-primary fs-5">@Model.TotalAmountWithVat.ToString("C2")</strong>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" form="checkoutForm" class="btn btn-primary btn-lg">
                            <i class="bi bi-lock me-2"></i>Payer maintenant
                        </button>
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Retour au panier
                        </a>
                    </div>

                    <div class="alert alert-warning mt-3" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        <small>
                            Vérifiez que tous les articles sont disponibles avant de procéder au paiement.
                        </small>
                    </div>

                    <div class="mt-3 text-center">
                        <small class="text-muted">
                            <i class="bi bi-shield-check me-1"></i>
                            Paiement 100% sécurisé
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Set hidden total fields before form submission
            $('#checkoutForm').submit(function() {
                $('input[name="TotalAmount"]').val(@Model.TotalAmount);
                $('input[name="TotalAmountWithVat"]').val(@Model.TotalAmountWithVat);
            });

            // Validate stock before submission
            $('#checkoutForm').submit(function(e) {
                var hasStockIssues = false;
                $('.text-danger').each(function() {
                    if ($(this).text().includes('Stock insuffisant')) {
                        hasStockIssues = true;
                    }
                });

                if (hasStockIssues) {
                    e.preventDefault();
                    alert('Certains produits ne sont pas disponibles en quantité suffisante. Veuillez mettre à jour votre panier.');
                    return false;
                }
            });
        });
    </script>
}