@model ecom.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Mon panier";
}

<div class="container py-5">
    <h1 class="mb-4">Mon panier</h1>

        @if (Model?.Cart?.Items?.Any() == true)
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Produit</th>
                                        <th>Prix</th>
                                        <th>Quantité</th>
                                        <th>Sous-total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Cart.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                                    {
                                                        <img src="@item.Product.ImageUrl"
                                                             class="img-thumbnail me-3"
                                                             style="width: 60px; height: 60px; object-fit: cover;"
                                                             alt="@item.Product?.Name" />
                                                    }
                                                    <div>
                                                        <h6 class="mb-0">@item.Product?.Name</h6>
                                                        <small class="text-muted">@item.Product?.SKU</small>
                                                        @if (item.IsAvailable == false)
                                                        {
                                                            <div class="text-danger small">
                                                                <i class="bi bi-exclamation-triangle"></i> Stock insuffisant
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </td>
                                            <td>@item.Product?.Price.ToString("C2")</td>
                                            <td>
                                                <form asp-controller="Cart" asp-action="Update" method="post"
                                                      class="d-inline">
                                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                                    <div class="input-group" style="width: 120px;">
                                                        <input type="number" class="form-control form-control-sm"
                                                               name="quantity" value="@item.Quantity" min="1"
                                                               onchange="this.form.submit()" />
                                                    </div>
                                                </form>
                                            </td>
                                            <td>@item.Subtotal.ToString("C2")</td>
                                            <td>
                                                <form asp-controller="Cart" asp-action="Remove" method="post">
                                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Home" asp-action="Products" class="btn btn-outline-primary">
                                <i class="bi bi-arrow-left me-2"></i>Continuer mes achats
                            </a>
                            <form asp-controller="Cart" asp-action="Clear" method="post">
                                <button type="submit" class="btn btn-outline-danger">
                                    <i class="bi bi-cart-x me-2"></i>Vider le panier
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Récapitulatif</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Sous-total:</span>
                            <span>@Model.TotalAmount.ToString("C2")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>TVA (20%):</span>
                            <span>@((Model.TotalAmount * 0.2m).ToString("C2"))</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Total:</strong>
                            <strong class="text-primary fs-5">@Model.TotalAmountWithVat.ToString("C2")</strong>
                        </div>

                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Cart" asp-action="Checkout"
                               class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-credit-card me-2"></i>Passer commande
                            </a>
                        }
                        else
                        {
                            <div class="text-center">
                                <p class="text-muted mb-3">Connectez-vous pour passer commande</p>
                                <a asp-controller="Account" asp-action="Login"
                                   asp-route-returnUrl="@Url.Action("Checkout", "Cart")"
                                   class="btn btn-primary w-100">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Se connecter
                                </a>
                            </div>
                        }

                        <div class="mt-4">
                            <p class="small text-muted">
                                <i class="bi bi-info-circle me-1"></i>
                                Livraison gratuite à partir de 50€ d'achat.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-cart display-1 text-muted"></i>
            <h3 class="mt-3">Votre panier est vide</h3>
            <p class="text-muted mb-4">Ajoutez des produits à votre panier pour continuer.</p>
            <a asp-controller="Home" asp-action="Products" class="btn btn-primary btn-lg">
                <i class="bi bi-shop me-2"></i>Découvrir nos produits
            </a>
        </div>
    }
</div>